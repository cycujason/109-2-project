<!DOCTYPE html>
<html dir="ltr">

    <head>
        <meta charset="UTF-8">
        <title>Group page</title> 
        <link rel="stylesheet" href="/css/sidebar.css">
        <link rel="stylesheet" href="/css/sidebar.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <body>
        <% if(Alert == 1) { %> 
            <script>
              window.alert("Search group not found!");
            </script>
        <% } %> 

        <% if(Alert == 2) { %> 
            <script>
              window.alert("New group name exists!");
            </script>
        <% } %> 

        <% if(Alert == 3) { %> 
            <script>
              window.alert("New group name cannot be the same as existed user's name!");
            </script>
        <% } %> 

        <div class="sidebar">
            <div class="logo-details">
                <div class="logo_name">Project</div>
                <i class='bx bx-menu' id="btn" ></i>
            </div>
            <ul class="nav-list">
        
              <li>
                <a href="/users/MainDashboard">
                  <i class='bx bx-user' ></i>
                  <span class="links_name">個人筆記</span>
                </a>
                <span class="tooltip">個人筆記</span>
              </li>
        
             <li>
              <a href="/users/setting_page">
                <i class='bx bx-cog' ></i>
                <span class="links_name">設定</span>
              </a>
              <span class="tooltip">設定</span>
            </li>
        
             <li class="profile">
                 <div class="profile-details">
                   <div class="name_job">
                     <div id="username" class="name"><%= user %> </div>
                     <div class="job">&nbsp;&nbsp;&nbsp;&nbsp;</div>
                     <div class="name">&nbsp;&nbsp;&nbsp;&nbsp;</div>
                   </div>
                 </div>
                 <a href="/users/logout">
                   <i class='bx bx-log-out' id="log_out" ></i>
                </a>
                
             </li>
            </ul>
          </div>

        

        <section class="home-section">
            <div class="text"><h1>All Groups:</h1></div>

            <div>
                <table class="list-note">
                    <% var count = allgroups[0].group_name; %> 
                    <% if (count != null ) { %> 
                        <% for(var i=0; i < allgroups[0].group_name.length; i++) { %>
                            <% var link = "/users/group_page/"+allgroups[0].group_name[i]; %> 
                            <tr>
                                <div class="overview-card" onclick="location.href='<%= link %>';">
                                    <div class="item1">
                                    <%= allgroups[0].group_name[i] %>
                                    </div>
                                </div>
                            </tr>
                            <% } %>
                    <% } %> 
                </table>
            </div>

            <div class="text"><h1>Group Tool:</h1></div>
            <h1></h1>
    
            <div class="forms">
                
                <form action="/users/search_group" method="GET">
                    <div class="input-boxes">
    
                        <div class="input-box">
                            <input class ="typein" type="text"
                            name ="search_group"
                            id ="search_group"
                            placeholder="查詢組名"
                            required>
                            <p>&nbsp;&nbsp;&nbsp;&nbsp;</p>
                            <input class="button-30" type="submit" value="查詢組名">
                        </div>
                        
                    </div>
                </form>
                
                <p>&nbsp;&nbsp;&nbsp;&nbsp;</p>
                    
                <form action="/users/new_group" method="GET">
                    <div class="input-boxes">
    
                        <div class="input-box">
                            <input class ="typein" type="text"
                                name ="new_group"
                                id ="new_group"
                                placeholder="新增組名"
                                required>

                                <p>&nbsp;&nbsp;&nbsp;&nbsp;</p>
                                <input  class="button-30" type="submit" value="新增組名">
                        </div>
    
                    </div>
                </form>           
                    
                <h1></h1>
        </section>
                
        </div>
        <script src="/js/sidebar.js"></script>
    </body>

</html>